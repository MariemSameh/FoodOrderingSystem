@{
    Restaurant restaurant = (Restaurant)ViewBag.CurrentRest;
}

<div class="row">
    <dl class="col-6 row">
        <dt class="col-2">@Html.DisplayNameFor(r => restaurant.Id)</dt>
        <dd class="col-10">@Html.DisplayFor(r => restaurant.Id)</dd>
        @*<dd class="col-10">@Model.Id</dd>*@

        <dt class="col-2">@Html.DisplayNameFor(r => restaurant.Name)</dt>
        <dd class="col-10">@Model.Name</dd>

        <dt class="col-2">@Html.DisplayNameFor(r => restaurant.Category)</dt>
        <dd class="col-10">@Model.Category</dd>

        <dt class="col-2">@Html.DisplayNameFor(r => restaurant.AnnualBudget)</dt>
        <dd class="col-10">@Model.AnnualBudget</dd>

        <dt class="col-2">@Html.DisplayNameFor(r => restaurant.StartDate)</dt>
        <dd class="col-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-2">@Html.DisplayNameFor(r => restaurant.IsActive)</dt>
        <dd class="col-10">@Html.DisplayFor(r => restaurant.IsActive)</dd>
    </dl>

    <img src="@Model.ImagePath" class="card col-6" style="width:250px;height:200px;" />

</div>

<ul class="col-4 list-group">
    <li class="list-group-item active">Delivery Men</li>
    @foreach (var deliveryGuy in restaurant.DeliveryMen)
    {
        <a asp-controller="DeliveryMen" asp-action="GetDetailsView" asp-route-id="@deliveryGuy.Id" style="text-decoration:none">
        <li class="list-group-item list-group-item-action">

                @deliveryGuy.Name (@deliveryGuy.Salary.ToString("C0"))
        </li>
        </a>

    }
</ul>